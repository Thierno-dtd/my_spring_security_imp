<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Appender pour ELK Stack -->
    <appender name="ELK_HTTP" class="ch.qos.logback.core.http.HttpPostAppender">
        <url>http://localhost:8080</url>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <loggerName/>
                <message/>
                <mdc/>
                <stackTrace/>
                <pattern>
                    <pattern>
                        {
                        "application": "security-api",
                        "environment": "${spring.profiles.active:-unknown}",
                        "server": "${HOSTNAME:-localhost}"
                        }
                    </pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>

    <!-- Appender de fallback local -->
    <appender name="FILE_FALLBACK" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/fallback.log</file>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>
                <logLevel/>
                <message/>
                <mdc/>
            </providers>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./logs/fallback.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- Configuration conditionnelle -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="ELK_HTTP"/>
            <appender-ref ref="FILE_FALLBACK"/>
        </root>
    </springProfile>

    <springProfile name="!prod">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE_FALLBACK"/>
        </root>
    </springProfile>
</configuration>
